# =============================================================================
# Portfolio Frontend - Environment Configuration Template
# =============================================================================
# IMPORTANT: This is a template file. Copy this to .env and fill in actual values.
# Never commit the actual .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
# Options: development, staging, production
REACT_APP_ENV=development

# Application name
REACT_APP_NAME=Portfolio Suite

# Version
REACT_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
# Development: http://localhost:8000
# Production: https://api.your-domain.com
REACT_APP_API_BASE_URL=http://localhost:8000

# API version prefix
REACT_APP_API_VERSION=/api

# API timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Authentication Settings
# -----------------------------------------------------------------------------
# Token storage method (localStorage, sessionStorage, cookie)
# Recommended: cookie for production (more secure)
REACT_APP_TOKEN_STORAGE=localStorage

# Enable automatic token refresh
REACT_APP_AUTO_REFRESH_TOKEN=true

# Token refresh threshold (minutes before expiration)
REACT_APP_REFRESH_THRESHOLD=5

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Enable Content Security Policy
REACT_APP_CSP_ENABLED=false

# Enable HTTPS enforcement (set to true in production)
REACT_APP_FORCE_HTTPS=false

# Enable security headers
REACT_APP_SECURITY_HEADERS_ENABLED=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable debug mode (shows console logs, errors, etc.)
# NEVER set to true in production
REACT_APP_DEBUG=true

# Enable verbose logging
REACT_APP_VERBOSE_LOGGING=true

# Enable development tools
REACT_APP_DEV_TOOLS=true

# Enable error boundaries with details
REACT_APP_SHOW_ERROR_DETAILS=true

# -----------------------------------------------------------------------------
# UI/UX Configuration
# -----------------------------------------------------------------------------
# Theme (light, dark, auto)
REACT_APP_THEME=light

# Language
REACT_APP_LANGUAGE=en

# Date format
REACT_APP_DATE_FORMAT=YYYY-MM-DD

# Timezone
REACT_APP_TIMEZONE=UTC

# -----------------------------------------------------------------------------
# File Upload Settings
# -----------------------------------------------------------------------------
# Maximum file size in bytes (10MB)
REACT_APP_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------
# Enable service worker (for PWA)
REACT_APP_ENABLE_SERVICE_WORKER=false

# Enable code splitting
REACT_APP_CODE_SPLITTING=true

# Enable lazy loading
REACT_APP_LAZY_LOADING=true

# API request retry attempts
REACT_APP_API_RETRY_ATTEMPTS=3

# API request retry delay (milliseconds)
REACT_APP_API_RETRY_DELAY=1000

# -----------------------------------------------------------------------------
# Analytics & Monitoring
# -----------------------------------------------------------------------------
# Google Analytics ID (optional)
REACT_APP_GA_ID=

# Sentry DSN for error tracking (optional)
REACT_APP_SENTRY_DSN=

# Enable performance monitoring
REACT_APP_PERFORMANCE_MONITORING=false

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Google Maps API key (if needed)
REACT_APP_GOOGLE_MAPS_KEY=

# Stripe publishable key (if using payments)
REACT_APP_STRIPE_KEY=

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Development server port
PORT=3000

# Enable hot reload
FAST_REFRESH=true

# Browser to open
BROWSER=default

# Enable HTTPS in development
HTTPS=false

# -----------------------------------------------------------------------------
# Build Settings
# -----------------------------------------------------------------------------
# Build output directory
BUILD_PATH=build

# Generate source maps (disable in production for security)
GENERATE_SOURCEMAP=true

# Enable inline runtime chunk
INLINE_RUNTIME_CHUNK=false

# Image optimization
IMAGE_INLINE_SIZE_LIMIT=10000

# -----------------------------------------------------------------------------
# Production-Specific Settings
# -----------------------------------------------------------------------------
# CDN URL for static assets (optional)
REACT_APP_CDN_URL=

# Asset path prefix
PUBLIC_URL=

# Enable production optimizations
REACT_APP_PRODUCTION_MODE=false
