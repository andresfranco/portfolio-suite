# Portfolio Suite Frontend - Environment Variables Template
# Copy this file to .env.local and update with your actual values
# NEVER commit .env.local file with real secrets to version control

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Backend API URL
REACT_APP_API_URL=http://localhost:8000

# API timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Session idle timeout (minutes)
REACT_APP_IDLE_TIMEOUT_MINUTES=30

# Token refresh interval (minutes)
REACT_APP_TOKEN_REFRESH_INTERVAL=25

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable MFA
REACT_APP_MFA_ENABLED=true

# Enable security dashboard
REACT_APP_SECURITY_DASHBOARD_ENABLED=true

# Enable file uploads
REACT_APP_FILE_UPLOADS_ENABLED=true

# ==============================================================================
# UI CONFIGURATION
# ==============================================================================
# Application title
REACT_APP_TITLE=Portfolio Admin

# Maximum file upload size (bytes)
REACT_APP_MAX_UPLOAD_SIZE=10485760

# ==============================================================================
# LOGGING & DEBUGGING
# ==============================================================================
# Enable debug logging (disable in production)
REACT_APP_DEBUG=false

# Log level: error, warn, info, debug
REACT_APP_LOG_LEVEL=info

# ==============================================================================
# SECURITY
# ==============================================================================
# Enable security headers validation
REACT_APP_VALIDATE_SECURITY_HEADERS=true

# CSRF protection enabled
REACT_APP_CSRF_ENABLED=true

# ==============================================================================
# ANALYTICS & MONITORING (optional)
# ==============================================================================
# Google Analytics ID
# REACT_APP_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ==============================================================================
# NOTES
# ==============================================================================
# 1. This file should be committed to version control
# 2. Create .env.local for local development (not committed)
# 3. Use environment-specific files: .env.development, .env.production
# 4. All variables must start with REACT_APP_ to be accessible in the app
# 5. Restart development server after changing environment variables
# 6. In production, set these via CI/CD or hosting provider
